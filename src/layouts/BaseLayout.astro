---
import '../styles/global.css';
import Logo from "../components/Logo.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blake's Thoughts {title ? `- ${title}` : "- med-tech • poetry • ideas"}</title>
    <link rel="icon" href="/favicon.ico" />
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-gray-900 text-white font-['Atkinson',_sans-serif] antialiased overflow-x-hidden">
    <!-- Epic background with animated mesh gradient -->
    <div class="fixed inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"></div>
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(255, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 75% 25%, rgba(236, 72, 153, 0.3) 0%, transparent 50%), radial-gradient(circle at 25% 75%, rgba(59, 130, 246, 0.3) 0%, transparent 50%);"></div>
      <div class="absolute inset-0 backdrop-blur-3xl"></div>
    </div>

    <!-- Futuristic navigation -->
    <header class="fixed top-0 left-0 right-0 z-50">
      <div class="mx-auto max-w-7xl px-6 py-6">
        <div class="relative">
          <!-- Glassmorphism nav container -->
          <div class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-2xl px-6 py-4 shadow-2xl">
            <div class="flex items-center justify-between">
              <Logo />
              
              <!-- Artistic navigation -->
              <nav class="hidden lg:flex items-center space-x-2">
                <a href="/blog" class="group relative px-6 py-3 overflow-hidden rounded-xl transition-all duration-300 hover:scale-105">
                  <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                  <span class="relative font-medium text-white/80 group-hover:text-white">Blog</span>
                  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-blue-500 to-cyan-500 scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
                </a>
                
                <a href="/topics/poetry" class="group relative px-6 py-3 overflow-hidden rounded-xl transition-all duration-300 hover:scale-105">
                  <div class="absolute inset-0 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                  <span class="relative font-medium text-white/80 group-hover:text-white">Poetry</span>
                  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-purple-500 to-pink-500 scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
                </a>
                
                <a href="https://github.com/blakeyoung81" target="_blank" rel="noopener noreferrer" class="group relative px-6 py-3 overflow-hidden rounded-xl transition-all duration-300 hover:scale-105">
                  <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                  <span class="relative font-medium text-white/80 group-hover:text-white">Projects</span>
                  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
                </a>
                
                <a href="/about" class="group relative px-6 py-3 overflow-hidden rounded-xl transition-all duration-300 hover:scale-105">
                  <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-teal-500/20 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                  <span class="relative font-medium text-white/80 group-hover:text-white">About</span>
                  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-emerald-500 to-teal-500 scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
                </a>
                
                <!-- Epic contact button -->
                <a href="/contact" class="group relative ml-4 px-8 py-3 overflow-hidden rounded-xl bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-700 hover:to-purple-700 text-white font-bold shadow-lg hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
                  <div class="absolute inset-0 bg-gradient-to-r from-white/20 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
                  <span class="relative">Contact</span>
                  <div class="absolute -inset-1 bg-gradient-to-r from-violet-600 to-purple-600 rounded-xl blur opacity-30 group-hover:opacity-50 transition-opacity"></div>
                </a>
              </nav>

              <!-- Futuristic mobile menu button -->
              <button class="lg:hidden p-3 rounded-xl bg-white/10 border border-white/20 hover:bg-white/20 transition-colors">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main content with proper spacing for fixed header -->
    <main class="relative z-10 pt-32 px-6 pb-20">
      <slot />
    </main>

    <!-- Incredible artistic footer -->
    <footer class="relative z-10 mt-20">
      <div class="backdrop-blur-lg bg-white/5 border-t border-white/10">
        <div class="mx-auto max-w-7xl px-6 py-16">
          <!-- Artistic footer content -->
          <div class="text-center">
            <!-- Animated social links -->
            <div class="flex justify-center space-x-8 mb-12">
              <a href="https://www.instagram.com/blakeyoungster/" target="_blank" rel="noopener noreferrer" class="group relative p-4 rounded-2xl bg-gradient-to-br from-pink-500/20 to-purple-500/20 border border-white/10 hover:border-white/20 transition-all duration-300 hover:scale-110 hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-br from-pink-500 to-purple-500 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
                <svg class="w-8 h-8 text-white/60 group-hover:text-white transition-colors relative z-10" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              
              <a href="https://github.com/blakeyoung81" target="_blank" rel="noopener noreferrer" class="group relative p-4 rounded-2xl bg-gradient-to-br from-gray-500/20 to-slate-500/20 border border-white/10 hover:border-white/20 transition-all duration-300 hover:scale-110 hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-br from-gray-500 to-slate-500 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
                <svg class="w-8 h-8 text-white/60 group-hover:text-white transition-colors relative z-10" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              
              <a href="https://www.linkedin.com/in/blake-young-70335a16b/" target="_blank" rel="noopener noreferrer" class="group relative p-4 rounded-2xl bg-gradient-to-br from-blue-600/20 to-indigo-600/20 border border-white/10 hover:border-white/20 transition-all duration-300 hover:scale-110 hover:-translate-y-2">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
                <svg class="w-8 h-8 text-white/60 group-hover:text-white transition-colors relative z-10" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>

            <!-- Gradient divider -->
            <div class="relative mb-8">
              <div class="w-64 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent mx-auto"></div>
            </div>

            <!-- Copyright with style -->
            <div class="space-y-4">
              <p class="text-lg text-white/80 font-medium">
                © {new Date().getFullYear()} Blake Young
              </p>
              <p class="text-white/50 text-sm">
                Life is a canvas — paint it with passion, color it with curiosity, and never stop creating your masterpiece.
              </p>
              <p class="text-white/30 text-xs">
                Crafted with <span class="text-blue-400 font-semibold">Astro</span> + <span class="text-cyan-400 font-semibold">Tailwind</span> + <span class="text-purple-400 font-semibold">Pure Magic</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html> 