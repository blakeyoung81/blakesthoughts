---
import Logo from "../components/Logo.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blake's Thoughts {title ? `- ${title}` : "- med-tech • poetry • ideas"}</title>
    <link rel="icon" href="/favicon.ico" />
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-zinc-50 text-zinc-900 dark:bg-zinc-900 dark:text-zinc-100 font-sans">
    <header class="mx-auto max-w-5xl px-4 py-6 flex items-center justify-between">
      <Logo />
      <nav class="space-x-4 text-sm">
        <a href="/blog" class="hover:underline">Blog</a>
        <a href="/poetry" class="hover:underline">Poetry</a>
        <a href="/projects" class="hover:underline">Projects</a>
        <a href="/about" class="hover:underline">About</a>
        <a href="/contact" class="hover:underline">Contact</a>
      </nav>
    </header>
    <main class="mx-auto max-w-4xl px-4 pb-20 pt-6">
      <slot />
    </main>
    <footer class="border-t border-zinc-200 dark:border-zinc-700 py-8 text-center text-xs text-zinc-500">
      © {new Date().getFullYear()} Blake Young. Opinions are my own.
    </footer>
  </body>
</html> 